pipeline {
    agent any  // Use any available agent/nde
    stages {

        stage('SCM Checkout') {  //reomve this stage as u are already using Pipeline script from SCM
            steps {
                git branch: 'main',
                    url: 'https://github.com/shiwanshurahul/jenkins_test.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                echo "Creating virtual environment..."
                bat """
                    python -m venv venv
                    call venv\\Scripts\\activate
                    python -c "print('Virtual environment created and activated')"

                """
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing required packages..."
                bat """
                    call venv\\Scripts\\activate
                    python -c "print('Installing packages from requirements.txt:')"
                    pip install -r requirements.txt
                    pip install NumPy 
                """
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running pytest..."
                bat """
                    call venv\\Scripts\\activate
                    pytest --junitxml=report.xml
                """
            }
        }
    }

    post {
        always {
            echo "Archiving test results..."
            junit 'report.xml'
        }
    }
}
